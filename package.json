{
    "name": "dpboss-backend",
    "version": "1.0.0",
    "description": "this is dpboss24 typescript backend",
    "main": "server.js",
    "author": "Vishamber Das",
    "license": "MIT",
    "scripts": {
        "start": "cross-env APP_ENV=LOCAL nodemon --files src/index.ts",
        "start:dev": "cross-env APP_ENV=DEV nodemon --files src/index.ts",
        "start:prod": "cross-env APP_ENV=PRODUCTION nodemon --files src/index.ts",
        "build": "tsc",
        "serve": "node ./dist/index.js",
        "lint": "eslint . --ext .ts",
        "watch": "tsc -w",
        "prepare": "husky install"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-list-endpoints": "^6.0.0",
        "http-status": "^1.5.3",
        "joi": "^17.7.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^8.0.3",
        "morgan": "^1.10.0",
        "typescript": "^4.5.2",
        "ws": "^8.17.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.13",
        "@types/express-list-endpoints": "^6.0.0",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/morgan": "^1.9.3",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.8.1",
        "ts-node": "^10.9.1"
    }
}
